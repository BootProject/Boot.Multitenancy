
    drop table if exists `Content`;

    drop table if exists `Page`;

    drop table if exists `Settings`;

    create table `Content` (
        Id INTEGER NOT NULL AUTO_INCREMENT,
       PageId INTEGER,
       Title TEXT,
       Html TEXT,
       Zone VARCHAR(255),
       primary key (Id)
    );

    create table `Page` (
        Id INTEGER NOT NULL AUTO_INCREMENT,
       ParentId INTEGER,
       Title TEXT,
       Url TEXT,
       MetaTitle TEXT,
       Controller TEXT,
       Action TEXT,
       Active TINYINT(1),
       primary key (Id)
    );

    create table `Settings` (
        Id INTEGER NOT NULL AUTO_INCREMENT,
       Title TEXT,
       FooterText TEXT,
       primary key (Id)
    );
